<%- include("./includes/head") %>
<body>
        <%- include("./includes/menu") %>
        <div class="container-fluid d-flex justify-content-center align-items-center min-height-80">
                <div class="container-form">
                        <form class="p-4" id="add-resident-form">
                                <h4 class="pb-1">Resident</h4>
                                <div class="form-group">
                                        <input
                                                type="text"
                                                name="name"
                                                class="form-control form-input"
                                                id="name"
                                                placeholder="Name"
                                        />
                                </div>
                                <div class="px-1 form-row justify-content-between">
                                        <div class="form-group">
                                                <select class="form-control form-input" id="sex">
                                                        <option selected>Male</option>
                                                        <option value="1">Female</option>
                                                </select>
                                        </div>
                                        <div class="form-group">
                                                <input
                                                        type="number"
                                                        name="old"
                                                        class="form-control form-input"
                                                        id="old"
                                                        placeholder="Old"
                                                />
                                        </div>
                                </div>
                                <div class="form-group">
                                        <input
                                                type="text"
                                                name="career"
                                                class="form-control form-input"
                                                id="career"
                                                placeholder="Career"
                                        />
                                </div>
                                <div class="form-group">
                                        <input
                                                type="number"
                                                name="houseId"
                                                class="form-control form-input"
                                                id="houseId"
                                                placeholder="House ID"
                                        />
                                </div>
                                <button type="submit" class="form-control form-submit">
                                        Submit
                                </button>
                        </form>
                </div>
        </div>
</body>
<%- include("./includes/foot") %>
<script src="/script/login.js"></script>
